<!doctype html>

<html>
<head>
   <title>Lost Items</title>
   <link rel="stylesheet" href="css/bootstrap-theme.css">
	<link rel="stylesheet" href="css/bootstrap.css">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <meta name="apple-mobile-web-app-capable" content="yes">
   <link href="/css/introHCI2.css" rel="stylesheet">
   <script src="js/introHCI.js"></script>
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
	<div class="top">
		<form class="example" action="action_page.php">
	  		<input type="text" placeholder="Search.." name="search">
	  		<button type="submit"><i class="fa fa-search"></i></button>
		</form>
		<div class="dropdown">
		  <button class="dropbtn"><i class="fa fa-caret-down" aria-hidden="true"></i></button>
		  <div class="dropdown-content">
		  	  <a href="#">Sort By:</a>
		  	  <a href="#">Closest to Me</a>
			  <a href="#">Date Posted (Newest)</a>
			  <a href="#">Date Posted (Oldest)</a>
	 	  </div>
		</div>
	</div>
	<div class="post">
		{{#each posts}}
		<div class="individual">
		<img src="{{image}}" class="img-responsive">
		<h1>{{name}}</h1>
		<p>{{description}}</p>
		</div>
		{{/each}}
	</div>
	<div class="middle">
		<button class="plus" onclick="window.location.href = 'post';"><i class="fa fa-plus" aria-hidden="true"></i></button>
	</div>
	<div class="bottom">
			<button class="back" onclick="window.location.href = '/';"><i class="fa fa-arrow-left" aria-hidden="true"></i></button>
			<button class="lost" onclick="window.location.href = 'lost';">Lost</button>
			<button class="found" onclick="window.location.href = 'lost';">Found</button>
	</div>
</body>

</html>


